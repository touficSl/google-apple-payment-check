<Window x:Class="Apple_Google_Payment_Check.AppleFieldsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apple_Google_Payment_Check"
        mc:Ignorable="d"
        Title="Apple Fields Window" Height="600" Width="700">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="AppleFields" VerticalAlignment="top" HorizontalAlignment="Center">
                <TextBlock x:Name="ErrorMessageApple" Foreground="White"  Visibility="Hidden" Text="" Background="Red" HorizontalAlignment="Left" Width="253" Margin="10,10,10,10"/>

                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock Text="Password*"  Margin="10,0,0,0"/>
                    <Button Height="20" Width="20" Name="passwordhelp" Click="passwordhelp_Click" Margin="20,0,0,2">
                        <Image Source="Images/help.png" />
                    </Button>
                </StackPanel>
                <PasswordBox x:Name="passwordTxt" MinWidth="185.6" HorizontalAlignment="Left"/>


                <Label/>

                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock Text="Receipt Data*"  Margin="10,0,0,0"/>
                    <Button Height="20" Name="receipthelp" Click="receipthelp_Click" Width="20" Margin="20,0,0,2">
                        <Image Source="Images/help.png" />
                    </Button>
                </StackPanel>
                <TextBox x:Name="receiptTxt"  MinWidth="185.6" AcceptsReturn="True" HorizontalAlignment="Left"/>

                <Label/>

                <CheckBox x:Name="ExcludeTxt" IsChecked="True">Exclude old transactions</CheckBox>
                <CheckBox x:Name="SandboxTxt" IsChecked="True">Sandbox</CheckBox>

                <Label/>

                <Button Content="Proceed" Click="" MinWidth="185.6" />


                <Label/>
                <Label/>
                <TextBlock Text="Save Fields as Name in the list"  Margin="10,0,0,0"/>
                <TextBox x:Name="fieldnametxt" MinWidth="185.6" HorizontalAlignment="Left"/>
                <Label/>
                <Button Name="SaveFields" Content="Save Fields" Click="SaveFields_Click" MinWidth="185.6" />

                <Label/>
                <Label/>
                <TextBlock Text="Fields List Name"  Margin="10,0,0,0"/>
                <ListBox Name="applefieldsList" MinHeight="60">
                </ListBox>
                <Label/>
                <Button Name="LoadField" Content="Load Selected Field" Click="LoadField_Click" MinWidth="185.6" />
                <Label/>
                <Button Name="DeleteField" Content="Delete Selected Field" Click="DeleteField_Click" MinWidth="185.6" />


                <Label/>
                <TextBlock Text="Remark: Don't worry your data are saved in your pc, click the button below to see where "  Margin="10,0,0,0"/>

                <Button Name="OpenFileLocation" Content="Open File Location" Click="OpenFileLocation_Click" MinWidth="185.6" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
