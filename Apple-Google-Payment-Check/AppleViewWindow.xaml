<Window x:Class="Apple_Google_Payment_Check.AppleViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apple_Google_Payment_Check"
        mc:Ignorable="d"
        Title="Apple View Window" Height="800" Width="900">
    <Grid  Margin="10" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Environment: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="envTxt" Margin="5,5,5,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0"  Text="Receipt creation date: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ReceiptCreationDateTxt" Margin="5,5,5,5" />

        <TextBlock Grid.Row="2" Grid.Column="0"  Text="Latest receipt info: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="3" Grid.Column="0"  Text="Expiry date: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="expires_date_pstTxt" Margin="5,5,5,5" />

        <TextBlock Grid.Row="4" Grid.Column="0"  Text="Product id: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="product_idTxt" Margin="5,5,5,5" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Pending renewal info: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="6" Grid.Column="0"  Text="Auto renew status: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="6" Grid.Column="1" x:Name="auto_renew_statusTxt" Margin="5,5,5,5" />

        <TextBlock Grid.Row="7" Grid.Column="0"  Text="Is in billing retry period: " Margin="5,5,5,5"/>
        <TextBlock Grid.Row="7" Grid.Column="1" x:Name="is_in_billing_retry_periodTxt" Margin="5,5,5,5" />

        <TextBlock Grid.Row="8" Grid.Column="0" Margin="5,5,5,5" Text="Remark: Don't worry your data are saved in your pc, click the button below to see where "/>
        <Button Grid.Row="8" Grid.Column="1" Margin="5,5,5,5" Name="OpenFileLocation" Content="Open File Location" Click="OpenFileLocation_Click" MinWidth="185.6" />

    </Grid>
</Window>
