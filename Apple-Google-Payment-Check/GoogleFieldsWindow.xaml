<Window x:Class="Apple_Google_Payment_Check.GoogleFieldsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apple_Google_Payment_Check"
        mc:Ignorable="d"
        Title="Google Fields Window" Height="350" Width="525">
    <Grid>
        <StackPanel x:Name="GoogleFields" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock x:Name="ErrorMessageGoogle" Foreground="White"  Visibility="Hidden" Text="" Background="Red" HorizontalAlignment="Left" Width="253" Margin="10,10,10,10"/>

            <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                <TextBlock Text="Authentication*"  />
                <Image Height="26.32" Width="28.734" Margin="60,0,0,0">
                    <Image.Source>
                        <BitmapImage UriSource="Images/help.png" />
                    </Image.Source>
                </Image>
            </StackPanel>
            <TextBox x:Name="Txt" Width="275.2" HorizontalAlignment="Left"/>

            <Label/>


            <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                <TextBlock Text="Token*"  />
                <Image Height="26.32" Width="28.734" Margin="60,0,0,0">
                    <Image.Source>
                        <BitmapImage UriSource="Images/help.png" />
                    </Image.Source>
                </Image>
            </StackPanel>
            <TextBox x:Name="tokenTxt" Width="275.2" HorizontalAlignment="Left"/>

            <Label/>


            <Button Content="Proceed" Click="ProceedClick"/>
        </StackPanel>
    </Grid>
</Window>
