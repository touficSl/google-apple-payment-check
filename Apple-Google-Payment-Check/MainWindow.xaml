<Window x:Class="Apple_Google_Payment_Check.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apple_Google_Payment_Check"
        mc:Ignorable="d"
        Title="Google - Android Payment Check" Height="350" Width="525">
    <Grid >


        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" >

            <TextBlock x:Name="ErrorMessage" Foreground="White"  Visibility="Hidden" Text="" Background="Red" HorizontalAlignment="Left" MinWidth="253" Margin="10,10,10,10"/>

            <StackPanel Orientation="Horizontal"  >
                <TextBlock Text="Select the payment that you want to check"  />
            </StackPanel>

            <StackPanel Orientation="Horizontal"  >
                <Button Content="Google Check " HorizontalAlignment="Left"
                    Margin="10,10,10,10"
                VerticalAlignment="Center"
                Padding="10,10,10,10" Click="GoogleClick" />
                <Button Content="Apple Check" HorizontalAlignment="Right"
                Margin="50,10,10,10" VerticalAlignment="Center"
                Padding="10,10,10,10" Click="AppleClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
